{
	"manifest_version": 2,

	"name": "Quote It",

	"version": "1.0.5",

	"default_locale": "en",

	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "58.0a1"
		}
	},

	"description": "Save quotes from across the web.",

	"icons": {
		"48": "icons/annotation.svg",
		"96": "icons/annotation.svg"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"permissions": [
		"menus",
		"storage",
		"tabs",
		"notifications",
		"find",
		"activeTab",
		"<all_urls>"
	],

	"optional_permissions": [],

	"page_action": {
		"browser_style": true,
		"default_icon": "icons/annotation.svg",
		"default_title": "View and manage this page's metadata.",
		"default_popup": "pageAction/panel.jsx",
		"show_matches": ["<all_urls>"]
	},

	"sidebar_action": {
		"browser_style": true,
		"default_icon": "icons/annotation.svg",
		"default_title": "Quotes",
		"default_panel": "sidebar/panel.jsx"
	},

	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Q"
			}
		}
	}
}
