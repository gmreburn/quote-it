{
	"manifest_version": 2,

	"name": "Quote It",

	"default_locale": "en",

	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "58.0a1"
		}
	},

	"description": "Save quotes from across the web.",

	"icons": {
		"48": "icons/annotation.svg",
		"96": "icons/annotation.svg"
	},

	"background": {
		"scripts": ["background.js", "omnibox.js"],
		"persistent": false
	},

	"permissions": [
		"menus",
		"activeTab",
		"storage",
		"tabs",
		"find",
		"notifications"
	],

	"sidebar_action": {
		"default_icon": "icons/annotation.svg",
		"default_title": "Quotes",
		"default_panel": "sidebar/panel.jsx"
	},

	"omnibox": {
		"keyword": "quotes"
	},

	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Q"
			}
		}
	}
}
