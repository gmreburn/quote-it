{
	"manifest_version": 2,

	"name": "Quote It",

	"default_locale": "en",

	"browser_specific_settings": {
		"gecko": {
			"id": "{4e332f4b-fa29-4ada-8fc4-38698c22f505}",
			"strict_min_version": "75.0a1"
		}
	},

	"description": "Collect quotes from across the web.",

	"icons": {
		"48": "icons/quotes-48.png",
		"96": "icons/quotes-96.png"
	},

	"background": {
		"scripts": ["background.js", "omnibox.js"],
		"persistent": false
	},

	"permissions": [
		"menus",
		"activeTab",
		"storage",
		"tabs",
		"find",
		"notifications",
		"identity",
		"https://quote-it.auth.us-east-1.amazoncognito.com/*",
		"http://127.0.0.1:3000/*"
	],

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/quotes-16.png",
			"32": "icons/quotes-32.png"
		},
		"default_title": "View saved quotes",
		"theme_icons": [
			{
				"light": "icons/quotes-16.png",
				"dark": "icons/quotes-16-dark.png",
				"size": 16
			},
			{
				"light": "icons/quotes-32.png",
				"dark": "icons/quotes-32-dark.png",
				"size": 32
			}
		]
	},

	"developer": {
		"name": "Gregory Reburn",
		"url": "https://github.com/gmreburn"
	},

	"sidebar_action": {
		"default_icon": "icons/quotes-16.png",
		"default_title": "Quotes",
		"default_panel": "sidebar/panel.jsx"
	},

	"omnibox": {
		"keyword": "quotes"
	},

	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Ctrl+Q"
			}
		}
	}
}
